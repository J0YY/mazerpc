generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Snapshot {
  id         String   @id @default(cuid())
  roomId     String
  tick       Int
  layoutHash String
  rngState   String
  stateBlob  Json
  createdAt  DateTime @default(now())

  @@index([roomId, tick])
}

model PoEReceipt {
  id         String   @id @default(cuid())
  roomId     String
  playerId   String
  seed       String
  timeMs     Int
  pathHash   String
  signature  String
  createdAt  DateTime @default(now())

  @@index([roomId, playerId])
}

