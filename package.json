{
  "name": "labyrinth-racer",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "concurrently -c auto -n WEB,AUTH 'pnpm --filter @app/web dev' 'pnpm --filter @app/room-authority dev'",
    "dev:web": "pnpm --filter @app/web dev",
    "dev:server": "pnpm --filter @app/room-authority dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "prettier -w .",
    "infra:up": "docker compose -f infra/compose/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/compose/docker-compose.yml down -v"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/three": "^0.179.0",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "prettier": "^3.3.2",
    "typescript": "^5.5.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*"
  ]
}
